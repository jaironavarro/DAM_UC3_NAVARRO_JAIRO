<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            motion:layout_constraintVertical_bias="0.0"
            android:layout_height="0dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="@+id/divider"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:id="@+id/imageView" />
        <Constraint
            motion:layout_constraintVertical_bias="0.0"
            android:layout_height="14dp"
            motion:layout_constraintEnd_toStartOf="@+id/guideline"
            motion:layout_constraintStart_toEndOf="@+id/txt_nombre"
            motion:layout_constraintTop_toTopOf="@+id/txt_nombre"
            motion:layout_constraintBottom_toBottomOf="@+id/txt_nombre"
            motion:layout_constraintHorizontal_bias="1.0"
            android:layout_width="0dp"
            android:id="@+id/id_nombre" />
    </ConstraintSet>
</MotionScene>